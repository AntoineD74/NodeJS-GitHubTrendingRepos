<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

  <div class="center-align">
    <div class="container">
      <a href="/" class="lang-logo">
        <img src="https://assets-cdn.github.com/images/modules/logos_page/GitHub-Mark.png">
      </a>
      <h1>Trending Repositories of GitHub</h1>
      <p>This app lists the 100 Top Trending GitHub Repositories.</p>
      <a type="button" class="waves-effect waves-light btn" href="/refresh"><span class="glyphicon glyphicon-flash"></span> Refresh the list</a>
    </div>
  </div>
<div class="container">
  <hr>
  <div class="row">
    <% repos.forEach(function(repo) { %>
      <div class="card">
        <div class="card-content">
          <div class="row">
            <div class="col s1">
              <img class="avatar-img" src="<%= repo.owner.avatar_url %>" />
            </div>
            <div class="col s11">
              <span class="card-title"><%= repo.name %> - <%= repo.full_name %><span class="badge purple">4 stars</span></span>
              <p>
                <%= repo.description %>
              </p>
            </div>
          </div>

        </div>
        <div class="card-action">
          <a href="<%= repo.html_url %>"><i class="material-icons">launch</i> Go to GitHub</a>
          <a onclick="rate('<%= repo.full_name %>')"><i class="material-icons">star</i> Rate - <%= repo.stargazers_count %> stars</a>
        </div>

      </div>
    <% }); %>
  </div> <!-- row -->
</div>

  <script>
    //Calls the route to rate a repo
    function rate(repo){
      console.log("Calling rate");
      $.ajax({
        url: '/rate?fullname='+repo,
        method: "GET",
        success: function(response){
          //Informs user of success
          alert("Rating worked !");
        },
        error: function(error){
          //Informs user of error
          alert("Rating failed !");
        }
      });

    }
  </script>
</body>
</html>
